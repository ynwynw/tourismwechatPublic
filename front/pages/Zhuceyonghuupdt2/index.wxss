page {
    height: 100%;
  }
  
  .container {
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: 0;
    box-sizing: border-box;
    background-color: #f2f2f2;
  }
  
  /*登录图片*/
  
  .login-icon {
    flex: none;
  }
  
  .login-img {
    width: 750rpx;
  }
  
  /*表单内容*/
  
  .login-from {
    margin-top: 20px;
    flex: auto;
    height: 100%;
  }
  
  .inputView {
    background-color: #fff;
    line-height: 44px;
  }
  
  /*输入框*/
  
  .nameImage, .keyImage {
    margin-left: 22px;
    width: 14px;
    height: 14px;
  }
  
  .loginLab {
    margin: 15px 15px 15px 10px;
    color: #545454;
    font-size: 14px;
  }
  
  .inputText {
    float: right;
    margin-top: 11px;
    color: black;
    font-size: 14px;
    width: 500rpx;
  }
  
  .line {
    width: 100%;
    height: 1px;
    background-color: #ccc;
    margin-top: 1px;
  }
  
  /*按钮*/
  
  .loginBtnView {
    width: 100%;
    height: auto;
    margin-top: 0px;
    margin-bottom: 0px;
    padding-bottom: 0px;
  }
  
  .loginBtn {
    width: 80%;
    margin-top: 35px;
  }
  
  .tx-reg {
    padding: 20rpx;
    color: #ccc;
    margin-top: 20rpx;
  }
  
  .pick-bg {
    background-color: #fff;
    padding: 20rpx;
    font-size: 14px;
    color: #545454;
  }
  
  .arrow{
    display:inline-block;
    border:6px solid transparent;
    border-top-color:#000;
    margin-left:8px;
    position:relative;
    top:6rpx;
   }
   /* ---------------------------- */
   /*模态框*/
   .modal{position:fixed; top:0; right:0; bottom:0; left:0; z-index:1000;}
   .modal-cancel{position:absolute; z-index:2000; top:0; right:0; bottom: 0; left:0; background:rgba(0,0,0,0.3);}
   .bottom-dialog-body{width:100%; position:absolute; z-index:3000; bottom:0; left:0;background:#dfdede;}
   /*动画前初始位置*/
   .bottom-positon{-webkit-transform:translateY(100%);transform:translateY(100%);}
    
    
   /* 底部弹出框 */
   .bottom-positon{
    text-align: center;
   }
   .Mselect{
    margin-bottom: 20rpx;
   }
   .Mselect view{
    padding: 26rpx 0;
    background: #fff;
   }
   .Mselect view:not(:last-of-type){
    border-bottom: 1px solid #dfdede;
   }
   .Mcancel{
    background: #fff;
    padding: 26rpx 0;
   }
  
   /* pages/edit/edit.wxss */
  /* @import '../../lib/iconfont/iconfont.wxss'; */
  
  .edit-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    height: 30pt;
    font-size: 11pt;
  }
  .header-delive {
    color: #09BB07;
  }
  .edit-main,
  .edit-footer {
    padding: 20rpx 20rpx;
  }
  .edit-text {
    /* min-height: 100rpx; */
    height: 180rpx;
    overflow-y: scroll;
    font-size: 13pt;
    line-height: 20pt;
    color: #353535
  }
  .edit-img {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-content: space-between;
  }
  .edit-img  image {
    width: 200rpx;
    height: 200rpx;
    margin: 0 10rpx 10rpx 0;
  }
  .icon-plus {
    width: 200rpx;
    height: 200rpx;
    background-color: rgba(87,107,149,0.1);
    font-size: 40pt;
    color: #888;
    line-height: 200rpx;
    text-align: center;
  }
  .footer-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    font-size: 13pt;
    border-top: 1rpx solid rgba(87,107,149,0.1);
  }
  .footer-row>text:nth-child(2){
    flex-grow: 1;
    text-indent: 0.5rem;
  }
  
  .icon-zuobiaonormal,
  .icon-touxiang,
  .icon-at,
  .icon-arrow-right {
    font-size: 16pt;
  }
  .iconfont {
    color: #888;
  }
  .icon-qqkongjian,
  .icon-qq {
    font-size: 18pt;
  }
  .mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(136,136,136,0.3);
  }
  .choose {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
  }
  .chooseBar {
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
    font-size: 16pt;
    border-bottom: 1rpx solid rgba(87,107,149,0.1);
    background-color: white;
  }
  .mask-header {
    width: 100%;
    height: calc(100% - 360rpx);
  }
  